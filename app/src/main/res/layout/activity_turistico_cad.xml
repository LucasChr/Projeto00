<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.lucas.projeto00.PTuristico.TuristicoCadActivity"
    style="@style/turistico">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/tv_ID"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/letras"/>

    <EditText
        android:id="@+id/turistico_cad_edtID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/turistico_cad_tvNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_Nome"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/letras"/>

    <EditText
        android:id="@+id/turistico_cad_edtNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_Endereco"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/letras"/>

    <TextView
        android:id="@+id/turistico_cad_tvEndereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/tv_EnderecoAtual"
        android:textAppearance="?android:attr/textAppearanceLarge"
        style="@style/letras"/>

    <Button
        android:id="@+id/turistico_cad_btnEndereÃ§o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="definirEnderecoT"
        android:text="@string/btn_SetarEndereco"
        style="@style/letras"/>

    <ImageButton
        android:id="@+id/turistico_cad_btnImgEndereco"
        android:layout_width="157dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.44"
        android:onClick="abrirMapaT" />

</LinearLayout>
